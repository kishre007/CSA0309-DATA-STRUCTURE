#include <stdio.h>
#define INF 999
int main(){int n,i,j,u,v,min,ne=1,mincost=0,a[20][20],vis[20]={0};
    scanf("%d",&n);
    for(i=0;i<n;i++)for(j=0;j<n;j++)scanf("%d",&a[i][j]);
    vis[0]=1;
    while(ne<n){min=INF;
        for(i=0;i<n;i++)for(j=0;j<n;j++)
            if(vis[i]&&!vis[j]&&a[i][j]<min){min=a[i][j];u=i;v=j;}
        printf("%d-%d(%d)\n",u,v,a[u][v]);
        mincost+=a[u][v];vis[v]=1;ne++;
    }
    printf("Cost=%d",mincost);
}
